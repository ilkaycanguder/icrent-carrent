<button id="backToTop" class="btn btn-primary rounded-circle" aria-label="Yukarı">
    <i class="bi bi-arrow-up"></i>
</button>

@section Scripts {
    <script>
        (function(){
          const header = document.querySelector('.navbar.fixed-top');
          const headerH = header ? header.offsetHeight : 0;
          const backBtn = document.getElementById('backToTop');

          function smoothTo(targetY, duration=900){
            const startY = window.pageYOffset, diff = targetY - startY; let t0=null;
            const ease = x => x<.5 ? 4*x*x*x : 1-Math.pow(-2*x+2,2)/2; // yumuşak hız eğrisi
            function step(ts){
              if(!t0) t0 = ts;
              const p = Math.min((ts - t0)/duration, 1);
              window.scrollTo(0, startY + diff * ease(p));
              if(p < 1) requestAnimationFrame(step);
            }
            requestAnimationFrame(step);
          }

          // aşağı ok (#why)
          document.querySelectorAll('a[href="#why"]').forEach(a=>{
            a.addEventListener('click', e=>{
              e.preventDefault();
              const el = document.getElementById('why');
              const y = el.getBoundingClientRect().top + window.pageYOffset - headerH - 12;
              smoothTo(y, 900);
            });
          });

          // yukarı butonu
          window.addEventListener('scroll', ()=> { backBtn.style.display = (window.pageYOffset > 300) ? 'inline-flex' : 'none'; });
          backBtn.addEventListener('click', ()=> smoothTo(0, 900));
        })();
    </script>
}
