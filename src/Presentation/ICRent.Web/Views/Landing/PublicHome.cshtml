<style>
    /* ===== Neon Yeşil Tema Dokunuşları (sayfa-özel) ===== */
    :root {
        --neon: #0ef29b;
        --neon-2: #7dfcc4;
        --neon-shadow: 0 0 6px rgba(14,242,155,.75), 0 0 18px rgba(14,242,155,.35);
        --neon-shadow-strong: 0 0 12px rgba(14,242,155,.95), 0 0 30px rgba(14,242,155,.55);
    }

    /* ---------- HAKKIMIZDA ---------- */
    .about-wrap {
        max-width: 860px;
        margin: 0 auto;
        text-align: center;
        position: relative;
    }

        .about-wrap::before {
            content: "";
            position: absolute;
            inset: -10% -2% auto -2%;
            height: 38%;
            background: radial-gradient(60% 120% at 50% 0%, rgba(14,242,155,.14), transparent 70%);
            filter: blur(12px);
            z-index: -1;
        }

    .about-badge {
        display: inline-block;
        padding: .4rem .85rem;
        border-radius: 999px;
        font-weight: 700;
        letter-spacing: .3px;
        background: linear-gradient(90deg, rgba(14,242,155,.16), rgba(14,242,155,.06));
        color: #0b7f55;
        border: 1px solid rgba(14,242,155,.35);
        box-shadow: var(--neon-shadow);
    }

    #about h2 {
        text-shadow: 0 10px 28px rgba(0,0,0,.12);
    }

    #about .lead {
        color: #54626a;
    }

    /* ---------- SSS / ACCORDION ---------- */
    .faq .accordion-item {
        border: 1px solid rgba(14,242,155,.28);
        border-radius: 14px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 6px 20px rgba(14,242,155,.08);
    }

        .faq .accordion-item + .accordion-item {
            margin-top: 1rem;
        }

    .faq .accordion-button {
        font-weight: 700;
        padding: 1rem 1.2rem;
        transition: color .2s ease, background .2s ease, box-shadow .2s ease;
    }

        .faq .accordion-button:not(.collapsed) {
            background: linear-gradient(180deg, rgba(14,242,155,.16), rgba(14,242,155,.08));
            color: #0c8a5c;
            box-shadow: inset 0 -1px 0 rgba(14,242,155,.25);
        }

        .faq .accordion-button:focus {
            box-shadow: 0 0 0 0.2rem rgba(14,242,155,.25);
            border-color: rgba(14,242,155,.45);
        }

    .faq .accordion-body {
        padding: 1rem 1.2rem 1.2rem;
        color: #5c6a72;
    }

    /* ---------- CTA (Neon kart) ---------- */
    .cta {
        position: relative;
        border-radius: 18px;
        background: radial-gradient(1200px 500px at 100% -20%, rgba(14,242,155,.12), transparent 60%), radial-gradient(900px 400px at -10% 120%, rgba(14,242,155,.10), transparent 60%), linear-gradient(180deg, #ffffff, #f9fffb);
        border: 1px solid rgba(14,242,155,.28);
        box-shadow: 0 18px 40px rgba(14,242,155,.12), var(--neon-shadow);
    }

        .cta::after {
            content: "";
            position: absolute;
            inset: -1px;
            border-radius: 20px;
            padding: 1px;
            background: linear-gradient(120deg, rgba(14,242,155,.55), rgba(125,252,196,.18), transparent 60%);
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            pointer-events: none;
        }

    .cta-title {
        letter-spacing: .3px;
        text-shadow: 0 8px 22px rgba(0,0,0,.10);
    }

    /* ---------- Buton Uyumları ---------- */
    .btn.neon-btn {
        --g1: #0ef29b;
        --g2: #7dfcc4;
        background: linear-gradient(90deg, var(--g1), var(--g2));
        border: none;
        color: #0a553a;
        font-weight: 700;
        box-shadow: var(--neon-shadow);
    }

        .btn.neon-btn:hover {
            filter: brightness(.98);
            box-shadow: var(--neon-shadow-strong);
            transform: translateY(-1px);
        }

    .btn.neon-outline {
        border: 1.5px solid rgba(14,242,155,.55);
        color: #0b7f55;
        background: linear-gradient(180deg, rgba(14,242,155,.06), rgba(14,242,155,.0));
        font-weight: 700;
        box-shadow: 0 6px 16px rgba(14,242,155,.10);
    }

        .btn.neon-outline:hover {
            background: rgba(14,242,155,.14);
            color: #095c3f;
            transform: translateY(-1px);
        }

    /* Küçük ekran uyumu */
    @@media (max-width: 576px) {
        .cta .row > [class*="col-"]:last-child {
            text-align: left !important;
        }
    }

    /* hero aşağı ok – neonla uyumlu */
    .down-arrow {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        border: 2px solid #fff;
        color: #fff;
        transition: .25s;
        margin-top: .25rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 0 0 3px rgba(14,242,155,.12);
    }

        .down-arrow:hover {
            background: rgba(14,242,155,.14);
            transform: translateY(2px);
            border-color: #0ef29b;
        }

        .down-arrow .arrow {
            display: block;
            width: 0;
            height: 0;
            margin: auto;
            border-left: 10px solid transparent;
            border-right: 10px solid transparent;
            border-top: 12px solid #fff;
            filter: drop-shadow(0 0 6px rgba(14,242,155,.65));
        }

    /* why kartları */
    .why-card {
        border: 1px solid rgba(14,242,155,.18);
        border-radius: 16px;
        background: #fff;
        transition: transform .2s, box-shadow .2s, border-color .2s;
    }

        .why-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 .75rem 1.5rem rgba(14,242,155,.14), 0 0 12px rgba(14,242,155,.25);
            border-color: rgba(14,242,155,.55);
        }

    .why-icon {
        width: 56px;
        height: 56px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.35rem;
        box-shadow: inset 0 0 0 1px rgba(14,242,155,.35);
    }

    /* Smooth scroll'u JS ile yapacağız */
    html {
        scroll-behavior: auto;
    }

    /* Navbar yüksekliği kadar offset */
    #why {
        scroll-margin-top: 80px;
    }

    /* Yukarı butonu */
    #backToTop {
        position: fixed;
        right: 18px;
        bottom: 18px;
        z-index: 1050;
        display: none;
        box-shadow: 0 8px 20px rgba(14,242,155,.25);
    }

    /* küçük ekran optimizasyonu – (önceki yazımdaki @@ media hatasını düzelttim) */
    @@media (max-width: 576px) {
        .hero-title {
            font-size: 2rem;
        }

        .hero-subtitle {
            font-size: 1rem;
        }
    }

    .fleet-scope {
        --neon: #0ef29b;
        --neon2: #7dfcc4;
        --ink: #212529;
        --muted: #6c757d;
        --edge: rgba(14,242,155,.22);
        --card: #fff;
        --shadow: 0 14px 30px rgba(14,242,155,.16), 0 6px 18px rgba(0,0,0,.06);
    }

        .fleet-scope .fleet-card {
            background: var(--card);
            border: 1px solid var(--edge);
            border-radius: 22px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            height: 100%;
            box-shadow: var(--shadow);
            transition: transform .22s ease, box-shadow .22s ease, border-color .22s ease;
        }

            .fleet-scope .fleet-card .p-3,
            .fleet-scope .fleet-card .p-lg-4 {
                display: flex;
                flex-direction: column;
                flex: 1; /* içerik alanı uzasın */
            }

        .fleet-scope .divider {
            margin-top: .75rem;
            margin-bottom: 1rem;
        }

        /* Price/CTA satırı en alta yapışsın */
        .fleet-scope .fleet-card .price-row,
        .fleet-scope .fleet-card .d-flex.align-items-center.justify-content-between.mt-3 {
            margin-top: auto; /* fiyat/cta her kartta en altta */
        }
            .fleet-scope .fleet-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 18px 42px rgba(14,242,155,.22), 0 8px 24px rgba(0,0,0,.08);
                border-color: rgba(14,242,155,.45);
            }

        .fleet-scope .fleet-badge {
            position: absolute;
            top: 14px;
            right: 14px;
            z-index: 2;
            border-radius: 999px;
            font-weight: 700;
            background: linear-gradient(90deg,var(--neon),var(--neon2));
            color: #0c5132;
            box-shadow: 0 10px 20px rgba(14,242,155,.3);
        }

        .fleet-scope .img-wrap img {
            width: 100%;
            height: 100%;
            object-fit: cover !important; /* contain'i ez */
            object-position: center;
            border-radius: 12px;
            filter: drop-shadow(0 8px 18px rgba(0,0,0,.16));
        }

        .fleet-scope .img-wrap {
            position: relative;
            background: linear-gradient(180deg,#f6fffb,#ffffff);
        }

            .fleet-scope .img-wrap .ratio {
                --bs-aspect-ratio: 56%;
            }

                .fleet-scope .img-wrap .ratio img {
                    filter: drop-shadow(0 8px 18px rgba(0,0,0,.18));
                    transition: transform .35s ease;
                }
     
        .fleet-scope .fleet-card:hover img {
            transform: scale(1.03);
        }

        .fleet-scope .title {
            font-weight: 800;
            color: #e31b23;
            letter-spacing: .2px;
        }

        .fleet-scope .muted {
            color: var(--muted);
