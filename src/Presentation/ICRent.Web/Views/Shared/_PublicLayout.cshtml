<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ICRent</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="~/css/publiclayout.css" rel="stylesheet" />

    <meta name="theme-color" content="#0ef29b" />
</head>
<body class="public-body">
    <!-- NEON NAVBAR -->
    <nav class="navbar navbar-expand-lg public-nav">
        <div class="container">
            <a class="navbar-brand neon-brand" asp-controller="Landing" asp-action="Index">
                <i class="bi bi-lightning-charge-fill me-1"></i> ICRent
            </a>

            <button class="navbar-toggler neon-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="nav" class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav align-items-lg-center">
                    <li class="nav-item">
                        <a class="nav-link neon-link" asp-controller="Landing" asp-action="Index">
                            Ana Sayfa
                            <span class="neon-underline"></span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link neon-link" href="/#about">
                            Hakkımızda
                            <span class="neon-underline"></span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link neon-link" href="/#car">
                            Araçlarımız
                            <span class="neon-underline"></span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link neon-link" href="/#faq">
                            SSS
                            <span class="neon-underline"></span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link neon-link" asp-controller="Account" asp-action="Login">
                            Giriş Yap
                            <span class="neon-underline"></span>
                        </a>
                    </li>
                    <li class="nav-item ms-lg-2 mt-2 mt-lg-0">
                        <a class="btn neon-btn" asp-controller="Account" asp-action="Register">
                            <i class="bi bi-person-plus me-1"></i> Kayıt Ol
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- neon alt-ışık -->
        <div class="neon-nav-glow"></div>
    </nav>

    <main class="public-main">
        @RenderBody()
    </main>

    <footer class="footer-min mt-5 pt-4 pb-4">
        <div class="container">
            <div class="row g-4 align-items-start">
                <!-- Marka + kısa açıklama + sosyal -->
                <div class="col-12 col-lg-6">
                    <div class="d-flex align-items-center mb-2">
                        <span class="fs-5 fw-bold neon-text">ICRent</span>
                    </div>
                    <p class="text-secondary-emphasis mb-3">
                        Araç çalışma ve kiralama süreçlerini güvenli, hızlı ve şeffaf biçimde yönetin.
                    </p>
                    <div class="footer-social d-flex gap-2">
                        <a class="btn btn-outline-secondary btn-sm neon-outline" href="https://www.linkedin.com/in/ilkaycanguder/" target="_blank" rel="noopener" aria-label="LinkedIn">
                            <i class="bi bi-linkedin"></i>
                        </a>
                        <a class="btn btn-outline-secondary btn-sm neon-outline" href="https://github.com/ilkaycanguder" target="_blank" rel="noopener" aria-label="GitHub">
                            <i class="bi bi-github"></i>
                        </a>
                    </div>
                </div>
                <!-- Hızlı menü -->
                <div class="col-6 col-lg-3">
                    <div class="footer-title mb-2">Menü</div>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1"><a class="footer-link neon-link-lite" asp-controller="Landing" asp-action="Index">Ana Sayfa</a></li>
                        <li class="mb-1"><a class="footer-link neon-link-lite" asp-controller="Account" asp-action="Login">Giriş Yap</a></li>
                        <li class="mb-1"><a class="footer-link neon-link-lite" asp-controller="Account" asp-action="Register">Kayıt Ol</a></li>
                        <li class="mb-1"><a class="footer-link neon-link-lite" href="#">Hakkımızda</a></li>
                    </ul>
                </div>
                <!-- İletişim -->
                <div class="col-6 col-lg-3">
                    <div class="footer-title mb-2">İletişim</div>
                    <ul class="list-unstyled text-secondary-emphasis mb-0">
                        <li class="mb-1"><i class="bi bi-geo-alt me-1 text-success"></i> Bursa</li>
                        <li class="mb-1"><i class="bi bi-telephone me-1 text-success"></i> +90 (212) 000 00 00</li>
                        <li class="mb-1"><i class="bi bi-envelope me-1 text-success"></i> ilkaycanguder@gmail.com</li>
                    </ul>
                </div>
            </div>

            <hr class="my-4 neon-hr" />

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                <div class="text-secondary-emphasis small mb-2 mb-md-0">
                    © @DateTime.Now.Year ICRent — Araç Kiralama ve Takip Sistemi
                </div>
                <div class="text-secondary-emphasis small d-flex gap-3">
                    <a href="#" class="footer-link neon-link-lite">Gizlilik</a>
                    <a href="#" class="footer-link neon-link-lite">İletişim</a>
                </div>
            </div>
        </div>
        <div class="footer-glow"></div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
